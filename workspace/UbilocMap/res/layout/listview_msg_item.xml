<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:arc="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp" >

    <com.ubiloc.view.CircleImageView
        android:id="@+id/lvmsg_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp" />

    <TextView
        android:id="@+id/lvmsg_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/lvmsg_img"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="#383838"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/lvmsg_msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lvmsg_name"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="-1dp"
        android:layout_toRightOf="@+id/lvmsg_img"
        android:ellipsize="marquee"
        android:paddingBottom="6dp"
        android:singleLine="true"
        android:textColor="#464646"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/lvmsg_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:textColor="#464646"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lvmsg_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lvmsg_date"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/red_point"
        android:gravity="center"
        android:height="20dp"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:width="20dp" />

</RelativeLayout>