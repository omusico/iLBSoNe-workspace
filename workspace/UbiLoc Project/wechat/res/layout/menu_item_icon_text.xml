<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/vertical_menu_item"
    android:layout_width="@dimen/vertical_menu_item_size"
    android:layout_height="@dimen/vertical_menu_item_size"
    android:background="@drawable/menu_item_bg" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/menu_item_img"
            android:layout_width="@dimen/vertical_menu_item_icon_size"
            android:layout_height="@dimen/vertical_menu_item_icon_size"
            android:background="@drawable/menu_item_navigation" />

        <TextView
            android:id="@+id/menu_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#555555"
            android:text="导航" />
    </LinearLayout>

</RelativeLayout>