<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/vertical_menu_control"
        style="@style/vertical_menu_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/vertical_menu_control_img"
            android:layout_width="@dimen/vertical_menu_control_size"
            android:layout_height="@dimen/vertical_menu_control_size"/>
    </RelativeLayout>
	
    <LinearLayout 
        android:id="@+id/vertical_menu_items_container"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_gravity="center_horizontal">
        
    </LinearLayout>
</LinearLayout>